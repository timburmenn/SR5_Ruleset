<root>
	<windowclass name="treasureparcel">
		<frame>recordsheet</frame>
		<placement>
			<size width="500" height="350" />
		</placement>
		<sizelimits>
			<minimum width="500" height="350" />
			<dynamic />
		</sizelimits>
		<minimize>minimized_item</minimize>
		<tooltip field="name" />
		<nodelete />
		<playercontrol />
		<sharable />
		<script file="campaign/scripts/parcel.lua" />
		<sheetdata>
			<sub_record_header name="header">
				<class>parcel_header</class>
			</sub_record_header>

			<frame_record name="coinframe">
				<anchored width="205">
					<top parent="header" anchor="bottom" offset="-2" />
					<left offset="15" />
					<bottom offset="-15" />
				</anchored>
			</frame_record>
			<label>
				<anchored to="coinframe" position="insidetopleft" offset="13,10"
					width="25" />
				<static>#</static>
				<center />
			</label>
			<label>
				<anchored to="coinframe" position="insidetopleft" offset="40,10"
					width="100" />
				<static>Currency</static>
				<center />
			</label>
			<list_text name="coins">
				<anchored to="coinframe">
					<left offset="15" />
					<top offset="40" />
					<right offset="-25" />
					<bottom offset="-20" />
				</anchored>
				<child>
					<backcolor>1A40301E</backcolor>
				</child>
				<child></child>
				<datasource>.coinlist</datasource>
				<class>parcel_coin</class>
				<gmeditonly />
				<sortby>
					<control>description</control>
				</sortby>
				<newfocus>description</newfocus>
				<script>
					function onDrop(x, y, draginfo)
					return window.onDrop(x, y, draginfo);
					end
				</script>
			</list_text>
			<scrollbar_list>
				<anchored to="coins" />
				<target>coins</target>
			</scrollbar_list>
			<button_iedit name="coins_iedit">
				<anchored to="coins" position="aboveright" offset="5,10" />
				<target>coins</target>
			</button_iedit>
			<button_iadd name="coins_iadd">
				<anchored to="coins_iedit" position="lefthigh" offset="5,0" />
				<target>coins</target>
			</button_iadd>

			<frame_record name="itemframe">
				<anchored>
					<top parent="header" anchor="bottom" offset="-2" />
					<left offset="215" />
					<bottom offset="-15" />
					<right offset="-15" />
				</anchored>
			</frame_record>
			<label>
				<anchored to="itemframe" position="insidetopleft" offset="13,10"
					width="25" />
				<static>#</static>
				<center />
			</label>
			<label>
				<anchored to="itemframe" position="insidetopleft" offset="40,10">
					<right offset="-30" />
				</anchored>
				<static>Item Name</static>
				<center />
			</label>
			<list_text name="items">
				<anchored to="itemframe">
					<left offset="15" />
					<top offset="40" />
					<right offset="-25" />
					<bottom offset="-20" />
				</anchored>
				<child>
					<backcolor>1A40301E</backcolor>
				</child>
				<child></child>
				<datasource>.itemlist</datasource>
				<class>parcel_item</class>
				<gmeditonly />
				<empty
					gmtext="Drop item links here.\nOr click to create entry.\nThen, right click to delete or add more." />
				<script>
					function onSortCompare(w1, w2)
					return ItemManager.getSortName(w1.getDatabaseNode()) &gt;
					ItemManager.getSortName(w2.getDatabaseNode());
					end
					function onDrop(x,
					y, draginfo)
					return window.onDrop(x, y, draginfo);
					end
				</script>
			</list_text>
			<scrollbar_list>
				<anchored to="items" />
				<target>items</target>
			</scrollbar_list>
			<button_iedit name="items_iedit">
				<anchored to="items" position="aboveright" offset="5,10" />
				<target>items</target>
			</button_iedit>
			<button_iadd name="items_iadd">
				<anchored to="items_iedit" position="lefthigh" offset="5,0" />
				<target>items</target>
			</button_iadd>

			<resize_recordsheet />
			<close_recordsheet />
		</sheetdata>
	</windowclass>

	<windowclass name="parcel_header">
		<margins control="0,0,0,7" />
		<script>
			function onInit()
			update();
			end
			function update()
			local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
			name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>treasureparcel</class>
			</link_record_header>
			<string_record_name name="name">
				<anchored>
					<top offset="5" />
					<left offset="40" />
					<right offset="-40" />
				</anchored>
				<empty>&#171; New Parcel &#187;</empty>
			</string_record_name>

			<genericcontrol name="rightanchor">
				<anchored height="0" width="0">
					<top />
					<right />
				</anchored>
			</genericcontrol>
			<icon_record_locked name="hardlocked">
				<anchored height="20" width="20">
					<top offset="5" />
					<right parent="rightanchor" anchor="left" relation="relative"
						offset="-5" />
				</anchored>
			</icon_record_locked>
			<button_record_locked name="locked">
				<anchored height="20" width="20">
					<top offset="5" />
					<right parent="rightanchor" anchor="left" relation="relative"
						offset="-5" />
				</anchored>
			</button_record_locked>
		</sheetdata>
	</windowclass>

	<windowclass name="parcel_coin">
		<margins control="0,0,0,5" />
		<sheetdata>
			<genericcontrol name="hanchor">
				<anchored width="0" height="0">
					<top />
					<right />
				</anchored>
				<invisible />
			</genericcontrol>
			<button_idelete name="idelete">
				<anchored>
					<top offset="5" />
					<right parent="hanchor" anchor="left" relation="relative"
						offset="-5" />
				</anchored>
			</button_idelete>

			<number_parcel name="amount">
				<anchored width="55" />
				<description field="description" />
			</number_parcel>
			<string_parcel name="description">
				<anchored>
					<left offset="70" />
				</anchored>
			</string_parcel>
		</sheetdata>
	</windowclass>

	<windowclass name="parcel_item">
		<margins control="0,0,0,5" />
		<script>
			function onInit()
			onIDChanged();
			end

			function onIDChanged()
			local bID = ItemManager.getIDState(getDatabaseNode());
			name.setVisible(bID);
			nonid_name.setVisible(not bID);
			end
		</script>
		<sheetdata>
			<hn name="isidentified">
				<script>
					function onValueChanged()
					window.onIDChanged();
					end
				</script>
			</hn>

			<genericcontrol name="hanchor">
				<anchored width="0" height="0">
					<top />
					<right />
				</anchored>
				<invisible />
			</genericcontrol>
			<button_idelete name="idelete">
				<anchored>
					<top offset="5" />
					<right parent="hanchor" anchor="left" relation="relative"
						offset="-5" />
				</anchored>
			</button_idelete>
			<linkcontrol name="shortcut">
				<anchored width="20" height="20">
					<top offset="5" />
					<right parent="hanchor" anchor="left" relation="relative"
						offset="-5" />
				</anchored>
				<class>item</class>
				<readonly />
			</linkcontrol>

			<number_parcel name="count">
				<default>1</default>
			</number_parcel>
			<string_parcel name="name">
				<empty>&#171; New Item &#187;</empty>
			</string_parcel>
			<string_parcel name="nonid_name">
				<empty>Unidentified Item</empty>
			</string_parcel>
		</sheetdata>
	</windowclass>
</root>
