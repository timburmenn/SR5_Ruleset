<root>
	<windowclass name="referencetext">
		<frame>referencepage</frame>
		<placement>
			<size width="400" height="650" />
		</placement>
		<sizelimits>
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<sheetdata>
			<sub_record_header name="header">
				<class>ref_text_header</class>
			</sub_record_header>

			<ft_record name="text">
				<anchored>
					<top parent="header" anchor="bottom" offset="20" />
					<left offset="35" />
					<right offset="-40" />
					<bottom offset="-35" />
				</anchored>
				<frame name="groupbox" offset="15,15,20,15" />
				<footer>footer_wide</footer>
			</ft_record>
			<scrollbar>
				<anchored to="text" />
				<target>text</target>
			</scrollbar>

			<resize_referencepage />
			<close_referencepage />
		</sheetdata>
	</windowclass>

	<windowclass name="referencetextwide">
		<frame>referencepage</frame>
		<placement>
			<size width="650" height="650" />
		</placement>
		<sharable />
		<sizelimits>
			<dynamic resize="vertical" />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<sheetdata>
			<sub_record_header name="header">
				<class>ref_text_header</class>
			</sub_record_header>

			<ft_record name="text">
				<anchored>
					<top parent="header" anchor="bottom" offset="20" />
					<left offset="35" />
					<right offset="-40" />
					<bottom offset="-35" />
				</anchored>
				<frame name="groupbox" offset="15,15,20,15" />
				<footer>footer_wide</footer>
			</ft_record>
			<scrollbar>
				<anchored to="text" />
				<target>text</target>
			</scrollbar>

			<resize_referencepage />
			<close_referencepage />
		</sheetdata>
	</windowclass>

	<windowclass name="ref_text_header">
		<margins control="0,0,0,7" />
		<sheetdata>
			<link_record_header>
				<class>referencetext</class>
			</link_record_header>
			<string_record_name name="name">
				<anchored>
					<top offset="5" />
					<left offset="40" />
					<right offset="-35" />
				</anchored>
				<readonly />
			</string_record_name>
		</sheetdata>
	</windowclass>

	<!-- Generic lists -->
	<windowclass name="referenceindexitem">
		<margins control="0,0,0,2" />
		<sheetdata>
			<linkfield name="listlink">
				<bounds>0,2,20,20</bounds>
			</linkfield>

			<string_list_link name="name">
				<bounds>25,2,-1,20</bounds>
				<linktarget>listlink</linktarget>
			</string_list_link>
		</sheetdata>
	</windowclass>

	<windowclass name="referenceindex">
		<frame>referencepage</frame>
		<placement>
			<size width="350" height="450" />
		</placement>
		<sizelimits>
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<sheetdata>
			<windowtitlebar>
				<field>name</field>
			</windowtitlebar>

			<windowlist name="list">
				<bounds>40,50,-43,-60</bounds>
				<frame name="groupbox" offset="15,15,20,15" />
				<datasource>.index</datasource>
				<class>referenceindexitem</class>
				<child>
					<backcolor>1A40301E</backcolor>
				</child>
				<child></child>
				<filter control="filter" />
				<filteron control="name" />
			</windowlist>
			<scrollbar_list />

			<filter name="filter">
				<bounds>55,-40,-35,20</bounds>
			</filter>

			<resize_referencepage />
			<close_referencepage />
		</sheetdata>
	</windowclass>

	<!-- Inline text list -->
	<windowclass name="referenceinlineindexitem">
		<margins control="0,0,0,3" />
		<sheetdata>
			<stringfield name="name">
				<bounds>0,2,-1,20</bounds>
				<font>sheetlabel</font>
				<underlineoffset default="on">0</underlineoffset>
				<static />
				<nodrag />
				<nodragselect />
				<script>
					function onClickDown(button, x, y)
					return true;
					end

					function onClickRelease(button, x, y)
					window.text.setVisible(not window.text.isVisible());
					return true;
					end
				</script>
			</stringfield>

			<basicft name="text">
				<anchored>
					<top parent="name" anchor="bottom" offset="3" />
					<left />
					<right />
				</anchored>
				<invisible />
			</basicft>
		</sheetdata>
	</windowclass>

	<windowclass name="referenceinlineindex">
		<frame>referencepage</frame>
		<placement>
			<size width="350" height="450" />
		</placement>
		<sizelimits>
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="description" />
		<sheetdata>
			<windowtitlebar>
				<field>name</field>
			</windowtitlebar>

			<windowlist name="index">
				<bounds>40,50,-43,-30</bounds>
				<frame name="groupbox" offset="15,15,20,15" />
				<datasource>.index</datasource>
				<class>referenceinlineindexitem</class>
			</windowlist>
			<scrollbar>
				<anchored to="index" />
				<target>index</target>
			</scrollbar>

			<resize_referencepage />
			<close_referencepage />
		</sheetdata>
	</windowclass>
</root>
